@startuml
!include style.puml
skinparam ActivityBackgroundColor LOGIC_COLOR_T1
skinparam ActivityBorderColor LOGIC_COLOR
skinparam ActivityFontSize 15

start
if () then ([event missing])
  :Throw "Event not found";
  stop
else ([event exists])
  :uniqueNames := removeDuplicates(memberNames);
  repeat
    :name := next uniqueNames;
    if () then ([member missing])
      :Record missing member;
    else ([member exists])
      if () then ([duplicate])
        :Record duplicate member;
      else ([fresh entry])
        :addAttendance;
        :Record added member;
      endif
    endif
repeat while () is ([More names])
:build result message;
stop
endif
@enduml
